<form action="/caesar" method="post">
  <h4>Enter your word to be encoded</h4>
  <input type="text" name="word" value="<%= @word %>">
  <h4>Enter number of letters to shift word</h4>
  <input type="text" name="shift" value="<%= @shift %>">
  </br>
  <input type="submit" value="Encode!">
</form>


<% if @encoded %>
  <p> Your encoded word is: <%= @encoded %> </p>
<% end %>